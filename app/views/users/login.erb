<div id="form-container">
    <div id="form-inner">
        <p id="form-title">Nevernote</p>
        <p id="form-subtitle">Never forget anything, except 2020.</p>
        <form method="POST" action="/login">
            <input id="form-username" class="standard-form-input" type="text" name="username" placeholder="Email address or username" autocomplete="off" autofocus>
            <input id="form-password" class="standard-form-input" type="password" name="password" placeholder="Password" autocomplete="off">
            <button id="form-button" class="standard-button" type="submit">Login</button>
        </form>
        <p id="form-create-title">Don't have an account?</p>
        <a id="form-create-link" href="/signup">Create an account</a>
    </div>
</div>